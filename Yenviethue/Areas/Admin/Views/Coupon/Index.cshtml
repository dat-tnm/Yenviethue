@model IEnumerable<Coupon>

@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="backgroundWhiteBorder">
    <div class="row">
        <div class="col-6">
            <h2>Index - Coupon</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        <label>Image</label>
                    </th>
                    <th>
                        <label>Name</label>
                    </th>
                    <th>
                        <label>Coupon type</label>
                    </th>
                    <th>
                        <label>Minimum amount</label>
                    </th>
                    <th>
                        <label>Discount</label>
                    </th>
                    <th>
                        <label>IsActive</label>
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="~/images/@item.ImgSrc.Remove(0, 8)" target="_blank">
                                <img src="@item.ImgSrc" style="width:50px" />
                            </a>
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.CouponType
                        </td>
                        <td>
                            @item.MinimumAmount
                        </td>
                        <td>
                            @item.Discount
                        </td>
                        <td>
                            @item.IsActive
                        </td>
                        <td>
                            <Partial name="_TableButtonPartial" model="@item.Id" />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No Coupon exists...</p>
        }
    </div>
</div>