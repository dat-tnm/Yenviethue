@model Yenviethue.Models.ViewModels.SubCategoryVM
@using Yenviethue.Extensions

@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Delete SubCategory</h2>
<br />

<div class="backgroundWhiteBorder">
    <form method="post" asp-action="Delete">
        <input type="hidden" readonly asp-for="SubCategory.Id" />
        <div class="form-group row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-3">
                <label asp-for="SubCategory.CategoryId"></label>
            </div>
            <div class="col-md-5">
                <input disabled asp-for="SubCategory.Category.Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="SubCategory.Name"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="SubCategory.Name" class="form-control" readonly />
            </div>
            <span asp-validation-for="SubCategory.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-3">
                <partial name="_DeleteAndBackToListButton" model="Model.SubCategory.Id" />
            </div>
        </div>
    </form>
</div>
