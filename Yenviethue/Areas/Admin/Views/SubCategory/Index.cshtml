@model Yenviethue.Models.ViewModels.SubCategoryVM
@using Yenviethue.Extensions;
@{
    ViewData["Title"] = "Index";
}


<div class="backgroundWhiteBorder">
    <div class="row">
        <div class="col-6">
            <h2>SubCategory List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />

    <div>
        <form method="post" asp-action="Index">
            <div class="form-group row">
                <div class="col-md-3">
                    <label asp-for="SubCategory.CategoryId"></label>
                </div>
                <div class="col-md-5">
                    <select id="ddlCategoryList" asp-for="SubCategory.CategoryId" asp-items="Model.CategoryList.ToSelectListItem(Model.SubCategory.CategoryId)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    <label asp-for="SubCategory.Name"></label>
                </div>
                <div class="col-md-5">
                    <input asp-for="SubCategory.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12 text-center">
                    <button class="btn btn-info" type="submit"><i class="fas fa-search"></i>Search</button>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        @if (Model.SubCategoryList.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        Id
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.SubCategory.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.SubCategory.Category.Name)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model.SubCategoryList)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Category.Name)
                        </td>
                        <td width="150px">
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
            <div page-model="@Model.PagingInfo" page-classes-enabled="true" page-class="btn border"
                 page-class-normal="btn btn-light" page-class-selected="btn btn-info active"
                 class="btn-group">
            </div>
        }
        else
        {
            <p>No SubCategory exists...</p>
        }
    </div>
</div>