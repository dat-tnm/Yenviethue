@model PagingInfo

<nav aria-label="Page navigation example">
    <ul class="pagination">
        @{
            if (Model.CurrentPage != 1)
            {
                <li class="page-item"><a class="page-link" href="@Model.urlParam.Replace(":", (Model.CurrentPage - 1).ToString());"><i class="fas fa-chevron-left"></i></a></li>
            }
            else
            {
                <li class="page-item disabled"><a class="page-link" href="#"><i class="fas fa-chevron-left"></i></a></li>
            }


            int minPage = Model.CurrentPage / 10;
            int maxPage = minPage + 10 > Model.totalPage ? Model.totalPage : minPage + 10;
            if (minPage == 0)
                minPage = 1;
            for (int i = minPage; i <= maxPage; i++)
            {
                if (i != Model.CurrentPage)
                {
                    <li class="page-item"><a class="page-link" href="@Model.urlParam.Replace(":", i.ToString())">@i</a></li>
                }
                else
                {
                    <li class="page-item active"><a class="page-link" href="@Model.urlParam.Replace(":", i.ToString())">@i</a></li>
                }
            }


            if (Model.CurrentPage != Model.totalPage)
            {
                <li class="page-item"><a class="page-link" href="@Model.urlParam.Replace(":", (Model.CurrentPage + 1).ToString())"><i class="fas fa-chevron-right"></i></a></li>
            }
            else
            {
                <li class="page-item disabled"><a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a></li>
            }
        }
    </ul>
</nav>