@model Yenviethue.Models.ViewModels.CatalogVM

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="/danh-muc-san-pham">Danh mục</a></li>
        @if (Model.SubCategoryCurrent == null)
        {
            <li class="breadcrumb-item active" aria-current="page">@Model.CategoryCurrent.Name</li>
        }
        else
        {
            <li class="breadcrumb-item"><a asp-controller="Catalog" asp-action="Category" asp-route-id=@Model.CategoryCurrent.Id>@Model.CategoryCurrent.Name</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.SubCategoryCurrent.Name</li>
        }
    </ol>
</nav>