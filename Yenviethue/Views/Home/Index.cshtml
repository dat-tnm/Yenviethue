@model Yenviethue.Models.ViewModels.HomeVM

@{
    ViewData["Title"] = "Trang chủ";
}

<div class="m-0 p-0 mb-4">
    <div id="carousel-news" class="carousel slide m-0 p-0" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carousel-news" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-news" data-slide-to="1"></li>
            <li data-target="#carousel-news" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 img-fluid" src="https://bizweb.dktcdn.net/100/344/969/themes/705911/assets/slider_1.jpg?1596077648858" alt="Cháo yến cho con yến vàng tặng mẹ">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 img-fluid" src="https://bizweb.dktcdn.net/100/344/969/themes/705911/assets/slider_2.jpg?1596077648858" alt="Cháo yến diện mạo mới dinh dưỡng mới">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 img-fluid" src="https://bizweb.dktcdn.net/100/344/969/themes/705911/assets/slider_3.jpg?1596077648858" alt="Yenviet viết để yêu thương">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carousel-news" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Trước</span>
        </a>
        <a class="carousel-control-next" href="#carousel-news" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Sau</span>
        </a>
    </div>
</div>

<div class="backgroundWhiteBorder container">
    <div class="row p-1">
        <div class="col-10 offset-1 text-center p-3 mb-5 border-bottom"><h3>SẢN PHẨM MỚI</h3></div>
    </div>
    <partial name="_ListProductPartial" model="@Model.ListTop4NewProduct" />
    <div class="row mt-5 mb-2">
        <div class="col-12">
            <div class="post-img p-3">
                <img class="img-fluid" src="https://bizweb.dktcdn.net/100/344/969/themes/705911/assets/sec_module_product_banner_index_7_1.jpg?1596077648858" />
            </div>
        </div>
    </div>
</div>

<div class="backgroundWhiteBorder container">
    <div class="row p-1">
        <div class="col-10 offset-1 text-center p-3 mb-5 border-bottom"><h3>SẢN PHẨM BÁN CHẠY</h3></div>
    </div>
    <partial name="_ListProductPartial" model="@Model.ListTop4HotProduct" />
    <div class="row mt-5 mb-2">
        <div class="col-12">
            <div class="post-img p-3">
                <img class="img-fluid" src="https://bizweb.dktcdn.net/100/344/969/themes/705911/assets/sec_module_product_banner_index_8_1.jpg?1596077648858" />
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(function () { $('[data-toggle="tooltip"]').tooltip() })
    </script>
}